page,
.content {
  position: relative;
  width: 100%;
  height: 100%;
}
.navbar {
  width: 100%;
  height: 80rpx;
  font-family: PingFangTC-Regular;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #E6E6E6;
  margin-bottom: 10rpx;
}
.navbar .item-list {
    width: 92%;
    margin: 0 auto;
    background-color: #FFFFFF;
}
.navbar .item-list .item {
      float: left;
      width: 33.33%;
      text-align: left;
}
.navbar .item-list .item .icon {
        margin-left: 20rpx;
        color: #333333;
}
.navbar .item-list .item .uni-input {
        line-height: 80rpx;
        text-align: center;
}
.detail-list {
  width: 92%;
  margin-top: 10rpx;
  margin: 0 auto;
  background: #FFFFFF;
  box-shadow: 2rpx 2rpx 8rpx 2rpx rgba(61, 84, 152, 0.15);
  border-radius: 4rpx;
}
.detail-list .detail {
    height: 150rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #E6E6E6;
}
.detail-list .detail .left {
      float: left;
      width: 75%;
      height: 100%;
      padding-left: 36rpx;
}
.detail-list .detail .left .petrolName {
        font-family: PingFangTC-Regular;
        font-size: 28rpx;
        color: #333333;
        height: 80rpx;
        line-height: 80rpx;
}
.detail-list .detail .left .other {
        font-family: PingFangTC-Regular;
        font-size: 26rpx;
        color: #999999;
}
.detail-list .detail .left .other view {
          float: left;
          margin-right: 15rpx;
}
.detail-list .detail .right {
      float: right;
      width: 25%;
      height: 100%;
      ont-family: PingFangTC-Medium;
      font-size: 36rpx;
      color: #333333;
      text-align: center;
      line-height: 150rpx;
}
.empty {
  padding-top: 40rpx;
  height: 100%;
  line-height: 100%;
  text-align: center;
}

