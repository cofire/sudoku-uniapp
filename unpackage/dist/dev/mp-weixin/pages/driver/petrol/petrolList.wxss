page,
.content {
  position: relative;
  width: 100%;
  height: 100%;
}
.navbar {
  width: 100%;
  height: 80rpx;
  font-family: PingFangTC-Regular;
  font-size: 28rpx;
  color: #333333;
  border: 1rpx solid #E6E6E6;
  margin-bottom: 10rpx;
}
.navbar .item-list {
    width: 92%;
    margin: 0 auto;
    background-color: #FFFFFF;
}
.navbar .item-list .item {
      float: left;
      width: 33.33%;
      text-align: left;
}
.navbar .item-list .item .icon {
        margin-left: 20rpx;
        color: #333333;
}
.navbar .item-list .item .uni-input {
        line-height: 80rpx;
        text-align: center;
}
.map {
  width: 100%;
  height: 400rpx;
  margin: 0 auto;
  border-radius: 4rpx;
  margin-bottom: 20rpx;
}
.map map {
    height: 90%;
    width: 100%;
}
.map .tips {
    margin-left: 4%;
    height: 40rpx;
    line-height: 40rpx;
    font-family: PingFangTC-Regular;
    font-size: 24rpx;
    color: #3D5498;
    letter-spacing: 1.6rpx;
}
.detail-list {
  width: 92%;
  margin-top: 10rpx;
  margin: 0 auto;
  background: #FFFFFF;
  box-shadow: 2rpx 2rpx 8rpx 2rpx rgba(61, 84, 152, 0.15);
  border-radius: 4rpx;
}
.detail-list .detail {
    height: 100%;
    min-height: 166rpx;
    margin: 0 auto;
    border-bottom: 1rpx solid #E6E6E6;
    background-color: #FFFFFF;
    margin-bottom: 20rpx;
}
.detail-list .detail .left {
      float: left;
      width: 25%;
      height: 100%;
      min-height: 166rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.detail-list .detail .left image {
        max-width: 125rpx;
        max-height: 125rpx;
        margin: 0 auto;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
}
.detail-list .detail .middle {
      float: left;
      width: 55%;
      height: 100%;
      min-height: 166rpx;
}
.detail-list .detail .middle .companyName {
        height: 80rpx;
        line-height: 80rpx;
        ont-family: PingFangTC-Semibold;
        font-size: 28rpx;
        color: #333333;
}
.detail-list .detail .middle .address {
        font-family: PingFangTC-Regular;
        font-size: 22rpx;
        color: #999999;
        margin-bottom: 13rpx;
}
.detail-list .detail .middle .oilList {
        ont-family: PingFangTC-Regular;
        font-size: 24rpx;
        color: #333333;
}
.detail-list .detail .middle .oilList .oilDetail .oilType {
          float: left;
          width: 110rpx;
}
.detail-list .detail .middle .oilList .oilDetail .oilPrice {
          float: left;
          width: 220rpx;
}
.detail-list .detail .right {
      float: left;
      width: 20%;
      height: 100%;
      min-height: 166rpx;
      display: -webkit-box;
      display: -webkit-flex;
      display: flex;
      -webkit-box-align: center;
      -webkit-align-items: center;
              align-items: center;
}
.detail-list .detail .right .distance {
        width: 100rpx;
        height: 100rpx;
        line-height: 100rpx;
        margin: 0 auto;
        -webkit-box-align: center;
        -webkit-align-items: center;
                align-items: center;
        font-family: PingFangTC-Regular;
        font-size: 22rpx;
        color: #999999;
        text-align: center;
}
.empty {
  padding-top: 40rpx;
  height: 100%;
  line-height: 100%;
  text-align: center;
}

